<h1>Log in</h1>

<%= form_with url: login_path do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "dummy.com" %>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control" %>
    <%= link_to "Forgot Password?", password_reset_path %>
  </div>
  <div class="mb-3">
    <%= form.submit "Login", data: { turbo: false }, class: "btn btn-primary" %>
  </div>
<% end %>